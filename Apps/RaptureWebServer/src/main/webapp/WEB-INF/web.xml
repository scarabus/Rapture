<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
    <!-- REFLEX -->
	<servlet>
		<servlet-name>REFLEXREF</servlet-name>
		<servlet-class>rapture.server.web.servlet.ReflexBoundedScriptPageServlet
		</servlet-class>
		<init-param>
			<param-name>prefix</param-name>
			<param-value>script://webscript</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>REFLEXREF</servlet-name>
		<url-pattern>/webscript/*</url-pattern>
	</servlet-mapping>
    <!-- JavaScript -->
    <servlet>
        <servlet-name>JSREF</servlet-name>
        <servlet-class>rapture.server.web.servlet.JavaScriptPageServlet
        </servlet-class>
        <init-param>
            <param-name>prefix</param-name>
            <param-value>script://webscript</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>JSREF</servlet-name>
        <url-pattern>/webscriptjs/*</url-pattern>
    </servlet-mapping>
    <!-- OPEN CONTENT -->
    <!-- BLOB -->
	<servlet>
		<servlet-name>BLOB</servlet-name>
		<servlet-class>rapture.server.web.servlet.BlobServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>BLOB</servlet-name>
		<url-pattern>/blob/*</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>BLOBUPLOAD</servlet-name>
		<servlet-class>rapture.server.web.servlet.BlobUploadServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>BLOBUPLOAD</servlet-name>
		<url-pattern>/blobupload/*</url-pattern>
	</servlet-mapping>
    <!-- CLOSE CONTENT -->
    <!-- LOGIN -->
	<servlet>
		<servlet-name>LOGINSCRIPT</servlet-name>
		<servlet-class>rapture.server.web.servlet.SessionControlServlet
		</servlet-class>
		<init-param>
			<param-name>prefix</param-name>
			<param-value>script://login/</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>LOGINSCRIPT</servlet-name>
		<url-pattern>/login/*</url-pattern>
	</servlet-mapping>
	<!-- JMX forwarding -->
	<servlet>
		<servlet-name>JMX</servlet-name>
		<servlet-class>rapture.server.web.servlet.JmxServlet
		</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>JMX</servlet-name>
		<url-pattern>/jmx/*</url-pattern>
	</servlet-mapping>
</web-app>
